{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}


{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container">
            <h1 class="text-center mt-2 mb-5">Composez votre adresse mail</h1>
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-12">
                    <div class="Email">
                        <div class="row mt-5 mb-5 text-center">
                            <div class="col-md-4 col-5">
                              {{ form_start(requestForm) }}
                            </div>
                            <div>
                                <h3>{{ form_row(requestForm.mail) }}</h3>
                            </div>
                            <div>
                                Entrez votre adresse mail et nous vous enverrons un lien
                                pour réinitialiser votre mot de passe.
                            </div>
                            <div><br>
                            <button class="btn btn-success">Envoyer le mail</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
    </div>

{% endblock %}
