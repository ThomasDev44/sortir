{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Composez votre adresse mail</h1><br>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.mail) }}
        <div>
            <small>
                Entrez votre adresse mail et nous vous enverrons un lien
                pour réinitialiser votre mot de passe.
            </small>
        </div><br>

        <button class="btn btn-success">Envoyer le mail</button>
    {{ form_end(requestForm) }}
{% endblock %}
