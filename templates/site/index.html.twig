{% extends 'base.html.twig' %}

{% block title %}Gérer les sites{% endblock %}
{% block header %}
    <link rel="stylesheet" href="{{ asset('css/ville-index.css') }}">
{% endblock %}
{% block body %}
    <div class="content">
        <div class="container">
            <h2 class="mb-5">Gérer les sites</h2>
            <div class="div-search">
            <form action = "{{ path('site_rechercher')}}" method = "post">
                <label name = "terme">Le nom contient :
                    <input type = "search" name = "terme">
                </label>
                <input  class="btn-ghost" type = "submit" name = "s" value = "Rechercher">
            </form>
            </div>
            <div class="table_css">
                <table class="table_css">
                    <thead>
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        {% for site in sites %}
                        <td>{{ site.nom }}</td>
                        <td>
                            <div class="btn-aligne">
                                <form action="{{ path('site_edit', {'id': site.id}) }}">
                                    <input class="btn-ghost" type="submit" value="Modifier" />
                                </form>
                                <form method="post" action="{{ path('site_delete', {'id': site.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
                                    <input class="btn-ghost" type="submit" value="Supprimer" />
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Pas de villes enregistrées</td>
                        </tr>
                    {% endfor %}
                    {{ include('site/_form.html.twig') }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}