    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(formSortie) }}
    {{ form_widget(formSortie) }}
    <button class="btn-primary">Enregistrer</button>
    {{ form_end(formSortie) }}

    <a href="{{ path('main_publier', {'idSortie': sortie.id }) }}" class="btn-primary">Publier la sortie</a>
    <a href="{{ path('main_supprimer', {'idSortie' : sortie.id}) }}" class="btn-primary">Supprimer la sortie</a>
    <a href="{{ path('main_accueil') }}" class="btn-primary">Annuler</a>


{% endblock %}
