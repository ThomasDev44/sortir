{% extends 'base.html.twig' %}

{% block title %}Gérer les villes{% endblock %}
{% block header %}
    <link rel="stylesheet" href="{{ asset('css/ville-index.css') }}">
{% endblock %}
{% block body %}
    <div class="content">
        <div class="container">
            <h2 class="mb-5">Gérer les villes</h2>
            <div class="table_css">
                <table class="table_css">
                    <thead>
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Code Postal</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        {% for ville in villes %}
                            <td>{{ ville.nom }}</td>
                            <td>{{ ville.codePostal }}</td>
                            <td>
                                <div class="btn-aligne">
                                    <form action="{{ path('ville_edit', {'id': ville.id}) }}">
                                        <input class="btn-ghost" type="submit" value="Modifier" />
                                    </form>
                                    <form method="post" action="{{ path('ville_delete', {'id': ville.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.id) }}">
                                        <input class="btn-ghost" type="submit" value="Supprimer" />
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Pas de villes enregistrées</td>
                            </tr>
                        {% endfor %}
                        {{ include('ville/_form.html.twig') }}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
{% endblock %}
