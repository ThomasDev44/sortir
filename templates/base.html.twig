<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico"/>
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
        <link href="{{ asset('css/navbar.css') }}" rel="stylesheet"/>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css"/>
        <!-- Bootstrap-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <div class="navbar navbar-expand-sm navbar-light navbar-sortir">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('main_accueil') }}">
                    <img class="" src="{{ asset('images/logo-sortir.png') }}" />
                    <i><strong>Sortir.com</strong></i>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        {% if app.user %}
                        <li class="nav-item active">
                            <a class="nav-link " id="navlink" href="{{ path('main_accueil') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navlink" href="#">Mon profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navlink" href="{{ path('app_logout') }}">Se deconnecter</a>
                        </li>
                        <li class="nav-item dropdown">
                            <img class="avatar-large dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="{{ asset('images/Sponge_bob.png') }}" />
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
{#                                <a class="dropdown-item" href="{{ path('ville_index') }}">Mon profil</a>#}
{#                                <a class="dropdown-item" href="#">Autres action</a>#}
                            </div>
                        </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" id="navlink" href="{{ path('app_login') }}">Se connecter</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="navlink" href="{{ path('app_register') }}">S'inscrire</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
        {% block header %}
        {% endblock %}
    </head>
    <body>
    {% block body %}{% endblock %}
    </body>
    <footer>
        <div class="footer">
            <div class="footer-links">
                <a href="#"><i class="fab fa-github"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-linkedin"></i></a>
            </div>
            <div class="footer-copyright footer-links footer-links-copyright">
                <a href="#">© {{ "now" | date("Y") }} ENI Ecole Informatique</a>
            </div>
        </div>
    </footer>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</html>

