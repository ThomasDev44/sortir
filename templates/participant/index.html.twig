{% extends 'base.html.twig' %}

{% block title %}Gerer les Participants{% endblock %}
{% block header %}
    <link rel="stylesheet" href="{{ asset('css/ville-index.css') }}">
{% endblock %}
{% block body %}
    <h1>Gérer les Participants</h1>

    <table class="table_css">
        <thead>
            <tr>
                <th>Username</th>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Mail</th>
                <th>Administrateur</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.username }}</td>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.mail }}</td>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                <td>
                {% if (participant.actif == false) %}
                    <a href="{{ path('participant_activation', {'id': participant.id}) }}">Activer</a>
                {% else %}
                    <a href="{{ path('participant_activation', {'id': participant.id}) }}">Désactiver</a>
                {% endif %}
                    <form method="post" action="{{ path('participant_delete', {'id': participant.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id) }}">
                        <a class="">Supprimer</a>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Pas d'utilisateurs trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
