{% extends 'base.html.twig' %}

{% block title %}Ajouter un lieu{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}

{% block body %}

    <div class="text-center p-3">
        <h1>Ajouter un lieu</h1>
    </div>

    {{ form_start(formlieu) }}
    <div class="container">
        <div class="row">
            <div class="row mt-4">
                <div class="col-md-4 col-2"></div>
                <div class="col-md-2 col-4">
                    {{ form_label(formlieu.nom) }}
                </div>
                <div class="col-md-4 col-5">
                    {{ form_widget(formlieu.nom) }}
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-4 col-2"></div>
                <div class="col-md-2 col-4">
                    {{ form_label(formlieu.rue) }}
                </div>
                <div class="col-md-4 col-5">
                    {{ form_widget(formlieu.rue) }}
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-4 col-2"></div>
                <div class="col-md-2 col-4">
                    {{ form_label(formlieu.latitude) }}
                </div>
                <div class="col-md-4 col-5">
                    {{ form_widget(formlieu.latitude) }}
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-4 col-2"></div>
                <div class="col-md-2 col-4">
                    {{ form_label(formlieu.longitude) }}
                </div>
                <div class="col-md-4 col-5">
                    {{ form_widget(formlieu.longitude) }}
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-4 col-2"></div>
                <div class="col-md-2 col-4">
                    {{ form_label(formlieu.ville) }}
                </div>
                <div class="col-md-4 col-5">
                    {{ form_widget(formlieu.ville) }}
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-4 col-2"></div>
                <div class="col-md-2 col-4 text-center pb-4">
                    <button class="btn btn-success">Enregistrer</button>
                </div>
                <div class="col-md-4 col-5 text-center pb-4">
                    <a href="{{ path('sortie_new') }}" class="btn btn-danger" type="button">Annuler</a>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(formlieu) }}
{% endblock %}