{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}


{% block body %}




    <div class="d-flex justify-content-center ">

        {{ app.user.userIdentifier }}

        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(form.username) }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(form.username) }}
            </div>
            {{ form_errors(form.username) }}
        </div>
        <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(form.prenom) }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(form.prenom) }}
            </div>
            {{ form_errors(form.prenom) }}
        </div>
        <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(form.nom) }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(form.nom) }}
            </div>
            {{ form_errors(form.nom) }}
        </div>
        <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(form.telephone) }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(form.telephone) }}
            </div>
            {{ form_errors(form.telephone) }}
        </div>
        <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(form.mail) }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(form.mail) }}
            </div>
            {{ form_errors(form.mail) }}
        </div>
        <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(form.password) }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(form.password) }}
            </div>
            {{ form_errors(form.password) }}
        </div>
        {# <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(form.confirmation) }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(form.confirmation) }}
            </div>
            {{ form_errors(form.confirmation) }}
        </div> #}
        <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(form.site) }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(form.site) }}
            </div>
            {{ form_errors(form.site) }}
        </div>

        <div class="form-group">
            <div class="col col-md-7">
                {{ form_row(form.enregistrer, {'attr' : { 'class': 'btn btn-success' }}) }}
            </div>
            <div class="col-12 col-md-9">
                <a href="{{ path('main_accueil') }}" role="button" class="btn btn-danger">Annuler</a>
            </div>
        </div>

        <div class="form-group">
            <div class="col col-md-9 text-danger">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
